<h1><%= @product.name %></h1>
<h3>$<%= @product.cost %></h3>
<p><%= @product.country_of_origin %></p>
<% if @product.reviews.any? %>
<h4>Here are the reviews for <%= @product.name %>:</h4>
<ul>
  <% @product.reviews.each do |review| %>
  <li>
    <%= link_to review.title, product_review_path(@product, review) %>
  </li>
  <% end %>
</ul>
<% else %>
<p>No reviews are listed for <%= @product.name %>.</p>
<% end %>

<p><%= link_to "Write a review", new_product_review_path(@product) %></p>

<a><%= link_to "Edit", edit_product_path(@product) %></a>  |
<a><%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></a>

<hr>

<a><%= link_to "Return to products", products_path %></a>
