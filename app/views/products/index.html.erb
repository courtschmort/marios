<h2>Products</h2>

<p><%= link_to "Add a product", new_product_path %></p>

<% if @products.any? %>
<form>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" name="three_most_recent">Three Most Recent</button>
    <button class="btn btn-primary" type="submit" name="most_reviews">Most Reviews</button>
    <button class="btn btn-primary" type="submit" name="made_in_the_usa">Made in the USA</button>
    <a><%= link_to "Remove filters", products_path %></a>
  </div>
</form>
<ul>
  <% @products.each do |product| %>
  <li><%= link_to product.name, product_path(product) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no products.</p>
<% end %>
