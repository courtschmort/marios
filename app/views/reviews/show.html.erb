<% x = 0 %>
<% stars = [] %>
<% until (x >= @review.rating) %>
<% x += 1 %>
<% stars.push('⭐️') %>
<% end %>
<h2><%= @review.title %></h2>
<h3><%= stars.join(" ") %></h3>
<h3><%= @review.author %></h3>
<p><%= @review.content_body %></p>

<a><%= link_to "Edit", edit_product_review_path(@product, @review) %></a>  |  <a><%= link_to "Delete", product_review_path(@product, @review),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %></a>

<hr>

<a><%= link_to "Return to #{@product.name}", product_path(@product) %></a>
