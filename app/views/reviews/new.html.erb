<h1>Write a review:</h1>

<% if @review.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>
  <%= f.label :rating %>
  <%= range_field(:review, :rating, in: 1..5, value: '1', step: '1') %>
  <%= f.submit %>
<% end %>

<hr>

<a><%= link_to "Return to product", product_path(@product) %></a>
